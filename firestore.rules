rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    match /users/{uid} {
      allow read: if request.auth != null &&
                  (request.auth.uid == uid || request.auth.token.admin == true);
      allow write: if request.auth != null &&
                   (request.auth.uid == uid || request.auth.token.admin == true);
    }

    match /events/{eventId} {
      allow write: if request.auth.token.admin == true;
      allow read: if request.auth.token.admin == true ||
                  (request.auth.uid in resource.data.assignedPerformers);
    }

    match /events/{eventId}/participation/{participantUid} {
      allow write: if request.auth != null &&
                   (request.auth.uid == participantUid || request.auth.token.admin == true);
      allow read: if request.auth != null &&
                  (request.auth.uid == participantUid || request.auth.token.admin == true);
    }

    match /admin/{document=**} {
      allow read, write: if request.auth.token.admin == true;
    }

    match /resources/{resourceId} {
      allow read: if request.auth.token.performer == true || request.auth.token.admin == true;
      allow write: if request.auth.token.admin == true;
    }
  }
}